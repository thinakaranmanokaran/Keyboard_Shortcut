{
  "name": "keyboard-shortcutx",
  "version": "0.1.0",
  "description": "Tiny, dependency-free universal hotkey manager (ESM-first) with a React hook.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.mjs",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs.js"
    },
    "./react": {
      "import": "./dist/react.mjs",
      "require": "./dist/react.cjs.js"
    }
  },
  "files": [
    "dist/",
    "index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "vitest --environment jsdom",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thinakaranmanokaran/Keyboard_Shortcut.git"
  },
  "keywords": [
    "keyboard",
    "hotkey",
    "shortcut",
    "shortcut-manager",
    "hotkeys",
    "keyboard-shortcut"
  ],
  "author": "Thinakaran Manokaran <thinakaran.manohar@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "jsdom": "^22.0.0",
    "rollup": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "vitest": "^1.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
