{
  "name": "keyboard-shortcutx",
  "version": "0.1.0",
  "description": "Lightweight, dependency-free keyboard shortcut & hotkey manager for JavaScript and React. ESM-first, easy API, supports global and component-level shortcuts.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.mjs",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs.js"
    },
    "./react": {
      "import": "./dist/react.mjs",
      "require": "./dist/react.cjs.js"
    }
  },
  "files": [
    "dist/",
    "index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "vitest --environment jsdom",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thinakaranmanokaran/Keyboard_Shortcut.git"
  },
  "bugs": {
    "url": "https://github.com/thinakaranmanokaran/Keyboard_Shortcut/issues"
  },
  "homepage": "https://github.com/thinakaranmanokaran/Keyboard_Shortcut#readme",
  "keywords": [
    "keyboard",
    "hotkey",
    "shortcut",
    "shortcut-manager",
    "hotkeys",
    "keyboard-shortcut",
    "keyboard events",
    "event listener",
    "react hook",
    "react shortcuts",
    "javascript hotkeys",
    "keybinding",
    "keyboard manager"
  ],
  "author": {
    "name": "Thinakaran Manokaran",
    "email": "thinakaran.manohar@gmail.com",
    "url": "https://thinakaran.dev"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "jsdom": "^22.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rollup": "^2.79.1",
    "vitest": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}